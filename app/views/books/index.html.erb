<h1>User Info</h1>
 <%= image_tag @user.get_profile_image(100,100) %>
 <%= @user.name %>
 <%= @user.introduction %>
 <%= link_to 'Edit', edit_user_path(current_user.id) %>
<h1>New book</h1>

<%= form_with model: @book do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Opinion</h4>
   <%= f.text_area :body %>

   <%= f.submit 'Create Book' %>
<% end %>

<h1>投稿一覧</h1>
<% @books.each do |book| %>

<p>タイトル</p>

<span>

  <%= link_to book.title, "/users/#{book.id}" %>

</span>


<% end %>