<div class= "container px-5 px-sm-0">
   <div class= "row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model:@user,url:user_path,method: :patch do |f| %>
      <div class="form-group">
        <% if @user.errors.any? %>
         <%= @user.errors.count %>件のエラーが発生しました
         <ul>
           <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
         </ul>
       <% end %>
      <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
      <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
      <label for="inputName">Introduction</label>
        <%= f.text_field :introduction %>
      </div>
        <%= f.submit "Update User" %>
      <% end %>
     </div>
  </div>
</div>