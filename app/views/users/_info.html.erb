<h2>User Info</h2>
 <%= image_tag user.get_profile_image(300,300)%>
 <table class="table">
   <tbody>
     <tr></tr>
     <tr>
       <th>name</th>
       <td><%= user.name %></td>
 　   </tr>
     <tr>
       <th>introduction</th>
       <td><%= user.introduction %></td>
